{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main", "article-*"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    "fs:allow-appcache-read",
    "fs:allow-appcache-write",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://api.aipiaxi.com/*"
        }
      ]
    }
  ]
}
