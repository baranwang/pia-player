{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "rendererOptions": {
          "less": {
            "javascriptEnabled": true
          }
        }
      }
    ]
  },
  "include": ["src/**/*", "types/**/*"]
}
